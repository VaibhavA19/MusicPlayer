<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.codingblocks.VaibhavAlreja.testmusicinteractiveplayer">

    <uses-permission android:name="android.permission.INTERNET" />

    <permission android:name="android.permission.MEDIA_CONTENT_CONTROL" />

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.MainActivity" />

        <service android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.MediaPlayerService" />

        <activity android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.MediaActivity" />
        <activity android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.OfflineActivity" />

        <activity
            android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.OfflineActivityTry"
            android:label="@string/title_activity_offline_try"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity
            android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.PlayLists"
            android:label="@string/title_activity_play_lists"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.Pedometer"
            android:label="@string/title_activity_pedometer"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.TrackPedo"
            android:label="@string/title_activity_track_pedo"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.LoginFirebase"
            android:label="@string/title_activity_login_firebase"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.codingblocks.VaibhavAlreja.MusicPlayer.SetSilentPhone"></activity>
    </application>

</manifest>